<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color for the entire rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/redOrange" />
        </shape>
    </item>

    <!-- Overlay shape to color only the corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
            <stroke android:width="0dp" android:color="@color/redOrange"/>
        </shape>
    </item>

</layer-list>
